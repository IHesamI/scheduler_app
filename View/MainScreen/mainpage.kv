#:import hex kivy.utils.get_color_from_hex
#:import Factory kivy.factory.Factory

<Event>
    size_hint: 1,None
    canvas:
        Color:
            rgba:  get_color_from_hex('#fff2f7')
            # rgba:  1,0,0,1
    markup:True
    # radius: [25, 0, 0, 0]



<MainScreenView>:
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        MDTopAppBar:
            id:toolbar
            title: "Title"
            icon: "git"
            # type: "bottom"
            right_action_items: [["dots-vertical", lambda x: root.menu.open()]]
            on_action_button: app.callback(self.icon)

        MDScrollView:
            id:scrollview
            MDList:
                id:list
        MDIconButton:
            icon:'plus'
            theme_icon_color: "Custom"
            pos_hint:{'center_x':.9,'center_y':1}
            # icon_color: app.theme_cls.primary_color
            md_bg_color: app.theme_cls.primary_color
            index:10
            on_release:
                app.manager_screen.switch_screen('event')